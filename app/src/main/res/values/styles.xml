<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/item_bottom_navigation_icon_color</item>
        <item name="itemIconTint">@color/item_bottom_navigation_icon_color</item>
        <item name="itemRippleColor">@color/item_bottom_navigation_ripple_color</item>
        <item name="itemTextAppearanceActive">@style/ActiveItemBottomNavigationTextAppearance</item>
    </style>

    <style name="ActiveItemBottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/iran_yekan_bold</item>
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
    </style>

    <style name="Theme.NikeStore.AuthTheme.Button" parent="Theme.NikeStore.AuthTheme">
        <item name="backgroundTint">?colorOnBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/iran_yekan_bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/iran_yekan_bold</item>
    </style>

    <style name="Theme.NikeStore.AuthTheme.EditText" parent="Theme.NikeStore.AuthTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textColorHint">#48FFFFFF</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:background">@drawable/background_et_auth</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ShippingTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ShippingTextInputEditTextStyle" parent="Theme.NikeStore">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileLinks">
        <item name="android:clickable">true</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="Avatar">
        <item name="cornerSize">50%</item>
    </style>
</resources>